<form
  action="<%= (typeof actionPath === 'undefined') ? '/books' : actionPath %>"
  ,
  method="POST"
>
  <% if (typeof actionPath !== 'undefined') { %>
  <input type="hidden" name="id" value="<%= formBook.id %>" />
  <% } %>

  <div class="form-group">
    <label for="bookName">Book Name</label>
    <input
      type="text"
      name="bookName"
      class="form-control"
      value="<%= formBook.bookName %>"
    />
  </div>

    <div class="form-group">
      <label for="bookIsbn">Book Isbn</label>
      <input type="text" name="bookIsbn" class="form-control" value="<%= formBook.bookIsbn %>" />
    </div>

    <div class="form-group">
      <label for="bookYear">Book Year</label>
      <input type="text" name="bookYear" class="form-control" value="<%= formBook.bookYear %>" />
    </div>

      <div class="form-group">
        <label for="bookAuthor">Book Author</label>
        <input type="text" name="bookAuthor" class="form-control" value="<%= formBook.bookAuthor %>" />
      </div>

  <div class="form-group">
    <button class="btn btn-dark">Submit</button>
  </div>
</form>
